{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://schema.example.com/simplecontentasset.json",
	"title": "Simple Content Asset",
	"description": "Simple Content Asset",
	"allOf": [{
		"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
	}],
	"type": "object",
	"properties": {
		"content": {
			"type": "array",
			"items": {
				"allOf": [{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "Content",
								"enum": [
									"https://schema.localhost.com/text.json",
									"https://schema.localhost.com/image.json",
									"https://schema.localhost.com/video.json"
								]
							}
						}
					}
				]
			},
			"minItems": 0,
			"maxItems": 20,
			"title": "Content",
			"description": ""
		}
	}
}