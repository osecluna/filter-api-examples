{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema-examples.com/blogpost-filter-and-sort-slot",
    "title": "blogpost-filter-and-sort slot",
    "description": "A slot that can contain the tutorial banner and carousel",
    "$comment": "Docs: https://amplience.com/docs/development/schema-examples/slots/tutorial-slot.html",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "type": "object",
    "properties": {
        "slotContent": {
            "title": "Content",
            "description": "description",
            "type": "array",
            "minItems": 0,
            "maxItems": 5,
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                    },
                    {
                        "properties": {
                            "contentType": {
                                "enum": [
                                    "https://schema-examples.com/blogpost-filter-and-sort"
                                ]
                            }
                        }
                    }
                ]
            }
        }
    },
    "propertyOrder": [],
    "required": [
        "slotContent"
    ]
}