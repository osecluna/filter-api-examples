{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://ampproduct.example.com/pdp-content-block.json",

	"title": "PDP content block",
	"description": "Content dynamically loaded into Product Detail Page based on hierarchy",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"heading": {
			"title": "Heading",
			"description": "description",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"video": {
			"title": "Video",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/video-link" }
			]
		},
		"details": {
			"title": "Product set details",
			"description": "description",
			"type": "string",
			"format": "markdown"
		},
		"hierarchyNodes": {
			"title": "Related Categories",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"allOf": [
					{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
					{
						"properties": {
							"contentType": {
								"enum": [
									"https://ampproduct.example.com/child-node.json"
								]
							}
						}
					}
				]
			}
		},
		"products": {
			"title": "Related Products",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"allOf": [
					{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
					{
						"properties": {
							"contentType": {
								"enum": [
									"https://ampproduct.example.com/product.json"
								]
							}
						}
					}
				]
			}
		}
		
	},
	"propertyOrder": []
}