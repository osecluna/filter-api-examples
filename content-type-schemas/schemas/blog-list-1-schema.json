{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/amplience/dc-static-blog-nextjs/master/schemas/blog-list.json",
  "title": "Blog list",
  "description": "A list of blogs",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "title": {
      "title": "Title",
      "description": "Title of the blog list",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "subTitle": {
      "title": "Subtitle",
      "description": "Subtitle for the blog list",
      "type": "string",
      "minLength": 1,
      "maxLength": 300
    },
    "blogPosts": {
      "title": "Blog posts",
      "description": "List of blog posts",
      "type": "array",
      "minItems": 1,
      "maxItems": 1000,
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference"
          },
          {
            "properties": {
              "contentType": {
                "enum": [
                  "https://raw.githubusercontent.com/amplience/dc-static-blog-nextjs/master/schemas/blog-post.json"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "required": ["title"],
  "propertyOrder": ["title", "subTitle", "blogPosts"]
}
