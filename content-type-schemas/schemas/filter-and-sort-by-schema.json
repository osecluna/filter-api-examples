{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/trait/filter-and-sort-by",

	"title": "Trait - sort by example",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"propertyName1": {
			"title": "title",
			"description": "description",
			"type": "string",
			"minLength": 0,
			"maxLength": 10
		},
		"propertyName2": {
			"title": "title",
			"description": "description",
			"type": "string",
			"minLength": 0,
			"maxLength": 10
		},
		"propertyName3": {
			"title": "title",
			"description": "description",
			"type": "string",
			"minLength": 0,
			"maxLength": 10
		},
		"propertyName4": {
			"title": "title",
			"description": "description",
			"type": "string",
			"minLength": 0,
