			},
			{
				"key": "propertyName2_1",
				"paths": ["/propertyName2", "/propertyName1"]
			},
			{
				"key": "propertyName3_2_1",
				"paths": ["/propertyName3", "/propertyName2", "/propertyName1"]
			},
			{
				"key": "propertyName4_3_2_1",
				"paths": ["/propertyName4","/propertyName3", "/propertyName2", "/propertyName1"]
			}
		]
  },
  	 "trait:filterable": {
		"filterBy":[
			{
				"paths":[
					"/propertyName1"
				]
			},
			{
				"paths":[
					"/propertyName2"
				]
			},
			{
				"paths":[
